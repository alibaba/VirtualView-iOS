<?xml version="1.0" encoding="utf-8"?>
<NFrameLayout
        layoutWidth="750rp"
        layoutHeight="800"
        background="#FFFFFF">
    <NText
            text="width = match_parent"
            textSize="12"
            textColor="#333333"
            paddingLeft="5"
            background="#cccccc"
            layoutWidth="match_parent"
            layoutHeight="20"/>
    <NFrameLayout
            layoutWidth="match_parent"
            layoutHeight="100"
            layoutMarginTop="20"
            background="#0000FF"
            borderColor="#FF0000"
            borderWidth="1"
            borderRadius="10"/>
    <NText
            text="width = fixed"
            textSize="12"
            textColor="#333333"
            paddingLeft="5"
            background="#cccccc"
            layoutWidth="match_parent"
            layoutHeight="20"
            layoutMarginTop="120"/>
    <NFrameLayout
            layoutWidth="100"
            layoutHeight="100"
            layoutMarginTop="140"
            background="#0000FF"
            borderColor="#FF0000"
            borderWidth="1"
            borderRadius="10">
        <NFrameLayout
                layoutWidth="100"
                layoutHeight="100"
                background="#00FF00"/>
    </NFrameLayout>
    <NText
            text="size = wrap_content"
            textSize="12"
            textColor="#333333"
            background="#cccccc"
            paddingLeft="5"
            layoutWidth="match_parent"
            layoutHeight="20"
            layoutMarginTop="240"/>
    <NFrameLayout
            layoutWidth="wrap_content"
            layoutHeight="wrap_content"
            layoutMarginTop="260"
            borderColor="#FF0000"
            borderWidth="1"
            paddingLeft="10"
            paddingRight="15"
            paddingTop="5"
            paddingBottom="20">
        <NFrameLayout
                layoutWidth="150"
                layoutHeight="50"
                layoutMarginTop="50"
                background="#800000FF"/>
        <NFrameLayout
                layoutWidth="50"
                layoutHeight="150"
                layoutMarginLeft="50"
                background="#800000FF"/>
    </NFrameLayout>
    <NText
            text="autoDim = X"
            textSize="12"
            textColor="#333333"
            paddingLeft="5"
            background="#cccccc"
            layoutWidth="match_parent"
            layoutHeight="20"
            layoutMarginTop="435"/>
    <NFrameLayout
            layoutWidth="match_parent"
            layoutMarginTop="455"
            layoutMarginLeft="10"
            layoutMarginRight="20"
            autoDimDirection="X"
            autoDimX="4"
            autoDimY="1"
            background="#0000FF"/>
    <NText
            text="gravity = h_center|bottom"
            textSize="12"
            textColor="#333333"
            paddingLeft="5"
            background="#cccccc"
            layoutWidth="match_parent"
            layoutHeight="20"
            layoutMarginBottom="100"
            layoutGravity="left|bottom"/>
    <NFrameLayout
            layoutWidth="100"
            layoutHeight="100"
            layoutMarginRight="30"
            layoutGravity="h_center|bottom"
            background="#0000FF"/>
</NFrameLayout>